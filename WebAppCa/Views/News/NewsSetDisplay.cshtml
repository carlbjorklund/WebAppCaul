@model IEnumerable<WebAppCa.Models.News>

@{
    ViewData["Title"] = "NewsSetDisplay";
    Layout = "~/Views/Shared/_NewsSetDisplay.cshtml";
}

<h2>NewsSetDisplay</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssueDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
      


            @foreach (var item in Model)
            {
                <div class="container">
                    <h2></h2>
                    <p></p>
                    <div class="card" style="width:400px">
                        <img class="card-img-top" src="/Upploads/@item.NewsId.ToString()/@item.Image" alt="Card image" style="width:100%" />
                        <div class="card-body">

                            <h4 class="card-title"> @item.Title </h4>
                            <p class="card-text">@item.Description</p>
                            <p class="card-text">@item.IssueDate</p>
                            <a href="#" class="btn btn-primary"></a>
                        </div>
                    </div>
                    <br>


                </div>
          

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IssueDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.NewsId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.NewsId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.NewsId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
