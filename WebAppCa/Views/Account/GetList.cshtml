@model IEnumerable<WebAppCa.ViewModels.MySchedulesViewModel>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>

<body>

    <section class="v1">
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-1">ULCA </h1>
                <p class="lead">Your Schedules.</p>
            </div>
        </div>

    </section>
    <div class="container">

        @foreach (var item in Model)
        {



            @foreach (var schedule in item.MySchedules)
            {
                <p> Air Date: @schedule.AirDate  </p>
                <p> Start time: @schedule.StartTime </p>
                <p> End time: @schedule.EndTime </p>
                <br />
                <a asp-action="Details" asp-route-id="@schedule.ChannelId" asp-controller="Channels"> <p> Go to Channel : @schedule.ChannelId </p> </a>
                <a asp-action="Details" asp-route-id="@schedule.ScheduleId" asp-controller="Schedules"> <p> Go to Schedules : @schedule.ScheduleId </p> </a>
                <a asp-action="Details" asp-route-id="@schedule.ProgrammeId" asp-controller="Programmes"> <p> Go to Programme : @schedule.ProgrammeId </p> </a>
                <hr />

            }
        }

    </div>

</body>
</html>
