@{
    ViewData["Title"] = "Contact";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-1">ULCA </h1>
        <p class="lead">Contact Us.</p>
    </div>
</div>

<section class="more-space">
    <div class="container2">
        <div class="row2">
            <div class="col-lg-6 offset-lg-3">
                <form id="contactform" method="post" action="">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Email</label>
                            <input type="email" class="form-control" id="inputEmail4" name="email" placeholder="Email">
                        </div>
                        <div class="form-group col-lg-6">
                            <label for="inputName4">Name</label>
                            <input type="text" class="form-control" id="inputName4" name="name " placeholder="name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputMessage4">Message</label>
                        <input type="text" name="message" class="form-control" id="inputMessage4" placeholder="Message">
                    </div>


                    <button type="submit" class="btn btn-primary">Send</button>


                </form>
            </div>
        </div>
    </div>
</section>

