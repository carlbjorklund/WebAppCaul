@model WebAppCa.Models.Schedule

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="v1">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-1">ULCA </h1>
            <p class="lead">ADM Schedules.</p>
        </div>
    </div>

</section>
<div class="container">

    <h2>Edit</h2>

    <h4>Schedule</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ScheduleId" />
                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AirDate" class="control-label"></label>
                    <input asp-for="AirDate" class="form-control" />
                    <span asp-validation-for="AirDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartTime" class="control-label"></label>
                    <input asp-for="StartTime" class="form-control" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndTime" class="control-label"></label>
                    <input asp-for="EndTime" class="form-control" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sorting" class="control-label"></label>
                    <input asp-for="Sorting" class="form-control" />
                    <span asp-validation-for="Sorting" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ChannelId" class="control-label"></label>
                    <select asp-for="ChannelId" class="form-control" asp-items="ViewBag.ChannelId"></select>
                    <span asp-validation-for="ChannelId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProgrammeId" class="control-label"></label>
                    <select asp-for="ProgrammeId" class="form-control" asp-items="ViewBag.ProgrammeId"></select>
                    <span asp-validation-for="ProgrammeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
