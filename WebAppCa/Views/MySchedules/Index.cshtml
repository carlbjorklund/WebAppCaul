@model IEnumerable<WebAppCa.ViewModels.MySchedule>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="v1">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-1">ULCA </h1>
            <p class="lead">It's about <strong>Create</strong> </p>
        </div>
    </div>

</section>

<div class="container">

    <h2>Index</h2>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Schedule)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Schedule.ScheduleId)
                </td>
                <td>
                   Programme Title:  @Html.DisplayFor(modelItem => item.Schedule.Programme.Title) |
                   Channel Name:  @Html.DisplayFor(modelItem => item.Schedule.Channel.Name) |
                   Air Date:  @Html.DisplayFor(modelItem => item.Schedule.AirDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MyScheduleId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MyScheduleId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MyScheduleId">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

</div>