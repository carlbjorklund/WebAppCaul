@model IEnumerable<WebAppCa.Models.Schedule>

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-1">ULCA </h1>
        <p class="lead">Your shows at ULCA Broadcast.</p>
    </div>
</div>
<section>
    <div class="wrapper">
        <blockquote class="blockquote text-center">
            <p class="mb-0"> There is no time, like now.</p>
            <footer class="blockquote-footer">Fredriko Emanero <cite title="Source Title"> Washinton Post</cite></footer>
        </blockquote>
    </div>
</section>
<div>
    @using (Html.BeginForm("GetAwesomeResult", "Schedules", FormMethod.Get))
    {
        <p>
            @Html.DropDownList("CategoryId", ViewData["CategoryId"] as IEnumerable<SelectListItem>)
            @Html.DropDownList("ChannelId", ViewData["ChannelId"] as IEnumerable<SelectListItem>)

            @*Find by name: @Html.TextBox("SearchString")*@
            <input type="submit" value="Search"/>
        </p>
    }


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AirDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sorting)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Channel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Channel.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Channel.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Programme)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Programme.Title)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AirDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sorting)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Channel.ChannelId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Channel.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Programme.ProgrammeId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Programme.Title)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Programme.Category.Title)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ScheduleId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ScheduleId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ScheduleId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>


    </table>
    <p>
        <a asp-action="Create">Create New</a>
    </p>

</div>