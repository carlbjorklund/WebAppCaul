@model IEnumerable<WebAppCa.Models.Programme>

@{
    ViewData["Title"] = "Index";
}




<section class="v1">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-1">ULCA </h1>
            <p class="lead">It's about <strong>Us</strong> and <strong>You</strong>. </p>
        </div>
    </div>

</section>

<section>
    <div class="wrapper">
        <blockquote class="blockquote text-center">
            <p class="mb-0"> There is no time, like now.</p>
            <footer class="blockquote-footer">Fredriko Emanero <cite title="Source Title"> Washinton Post</cite></footer>
        </blockquote>
    </div>
</section>

<div class="container .mx-auto display:inline">


    @using (Html.BeginForm("Index", "Programmes", FormMethod.Get))
    {
        <div align="center">

          
            <button type="submit" value="Search" class="btn btn-info">filter</button>
            @Html.DropDownList("CategoryId", ViewData["CategoryId"] as IEnumerable<SelectListItem>)
        </div>
    }





    @foreach (var item in Model)
    {

        <ul id="showlist" class="list-unstyled mx-auto">
            <li class="media my-8">
                @if (item.Image != "")
                {
                    <img class="Details" src="/Upploads/@item.ProgrammeId.ToString()/@item.Image">
                }
                else
                {
                    <img class="mr-3" src="/images/media.svg" alt="Generic placeholder image">

                }
                <div class="media-body">
                    <h5 class="mt-0 mb-1"> > @Html.DisplayFor(modelItem => item.Title)<</h5>
                    <p> Description: @Html.DisplayFor(modelItem => item.Description) </p>
                    <p> Category: @Html.DisplayFor(modelItem => item.Category.Title)</p>
                    <a asp-action="Details" asp-route-id="@item.ProgrammeId" class="btn btn-warning">Details</a> |
                    <a asp-action="SearchProgramme" asp-controller="Programmes" asp-route-id="@item.ProgrammeId" class="btn btn-warning">Go to programme Schedule</a>
                </div>
            </li>
        </ul>




    }




</div>